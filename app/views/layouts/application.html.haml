!!!
%html
  %head
    %title
      = @title
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header.container-fuild
      %h2
        = @title
    %nav.navbar.navbar-dark.bg-inverse
      Bike Index Serial Search Inspector
      %ul.nav.navbar-nav
        %li.nav-item
          .nav-link
            = link_to 'Serial Searches', serial_searches_path, class: 'link-text'
        %li.nav-item
          .nav-link
            = link_to 'IP Addresses', ip_addresses_path, class: 'link-text'

    = yield