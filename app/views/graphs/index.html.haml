.container-fluid
  %h5
    The Last 24 hours
    %small
      = Time.zone
  .graph
    = line_chart uniquely_created_entries_graphs_path(grouping: 'day'), xtitle: 'Hour', ytitle: 'Number of created items'
  %h5
    In the last week
  .graph
    = line_chart uniquely_created_entries_graphs_path(grouping: 'week'), xtitle: 'Day', ytitle: 'Number of created items'
  %h5
    Source Type in the last week
  .graph
    = line_chart source_type_graphs_path, xtitle: 'Search Source', ytitle: 'Number of Searches'
  %h5
    In the Last 30 days
  .graph
    = line_chart uniquely_created_entries_graphs_path(grouping: 'month'), xtitle: 'Day', ytitle: 'Number of created items'
  %h5
    All Time
  .graph
    = line_chart uniquely_created_entries_graphs_path(grouping: 'year'), xtitle: 'Week', ytitle: 'Number of created items'
